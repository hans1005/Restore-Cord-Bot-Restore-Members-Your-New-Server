{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES6",
        "lib": [ "ESNext" ],

        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,

        "noEmit": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    },
    "exclude": [
        ".git",
        ".github",
        ".vscode",
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*",
    ]
}